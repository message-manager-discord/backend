{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    "composite": true,
    "incremental": true
  }
}
